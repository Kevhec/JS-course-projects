extends ./layout/index

block content
  main.container.mt-5
    h2.text-center.mt-5 #{page}

    h3.text-center Lo que vivieron nuestros clientes
    include ./layout/testimonials_content

    .row
      .col-md-12
        h3.d-block.w-100.text-center ¿Qué tal tu viaje?
        
        if(errors)
          each error in errors
            .alert.col.alert-danger.text-center
              p.mb-0 #{error.message}

    .row.justify-content-center
      .col-md-8
        form(action="/testimonials" method="POST") 
          .form-group
            label(for="name") Nombre
            input#name.form-control(type="text", placeholder="Albert Einstein", name="name", value= name || '')
          .form-group
            label(for="email") Correo electrónico
            input#email.form-control(type="text", placeholder="ejemplo@correo.com", name="email", value= email || '')
          .form-group
            label(for="message") Mensaje
            textarea#message.form-control.mb-3(name="message", cols="30", rows="3", placeholder="¡Una maravillosa experiencia!") #{message || ''}
            button.btn.btn-success.btn-block(type="submit") Enviar